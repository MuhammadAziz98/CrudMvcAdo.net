@model IEnumerable<Ado.netMVC.Models.EmployeeModel>

@{
    ViewBag.Title = "Index";
}

@if(TempData["MsgInsert"]!= null)
{<div id="messageh3" class="alert alert-success alert-dismissible">
    <h3>@TempData["MsgInsert"]</h3>
</div>

           }

<h2>Index</h2>



<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered bg-danger">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmpName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmpEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmpSalary)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EmpName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmpEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmpSalary)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>


<script>

    const msg = document.getElementById("messageh3");
    setTimeout(() => {
        msg.style.display = 'none';

    },4000)

</script>
